generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Document {
  id        String   @id @default(uuid())
  title     String
  shapes    Shape[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Shape {
  id         String   @id @default(uuid())
  type       String
  properties Json
  documentId String
  document   Document @relation(fields: [documentId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
